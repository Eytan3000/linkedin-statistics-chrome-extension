{
  "name": "Linkedin Extension",
  "description": "Save job posts and get statistics",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Linkedin Extension",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ]
}